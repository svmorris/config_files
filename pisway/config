### Variables
set $mod  Mod4
set $alt Mod1
set $ctrl Ctrl
set $shift Shift
set $left h
set $down j
set $up k
set $right l
set $term foot
set $menu exec ~/.config/config_files/scripts/wofilauncher
set $XDG_CURRENT_DESKTOP sway



output DSI-1 \
    mode 720x1280@60Hz \
    position 0 0 \
    scale 2 \
    transform 90


set $disp DP-3

workspace 1 output $disp
workspace 2 output $disp
workspace 3 output $disp
workspace 4 output $disp
workspace 5 output $disp
workspace 6 output $disp
workspace 7 output $disp

bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7

bindsym $mod+Shift+1 move to workspace number 1
bindsym $mod+Shift+2 move to workspace number 2
bindsym $mod+Shift+3 move to workspace number 3
bindsym $mod+Shift+4 move to workspace number 4
bindsym $mod+Shift+5 move to workspace number 5
bindsym $mod+Shift+6 move to workspace number 6
bindsym $mod+Shift+7 move to workspace number 7



bar {
    position top
    height 20
    workspace_min_width 50


    status_command 'while [ 1 ]; do ip a | grep 192.168 | awk \'{print $1, $2, $3, $4}\'; sleep 1; done'

    colors {
        statusline            #e6e6eb
        background            #0b0b0f
        separator             #2a2a40

        focused_workspace     #8a2be2        #8a2be2        #0b0b0f
        active_workspace      #12121a        #12121a        #b48cff
        inactive_workspace    #0b0b0f00      #0b0b0f00      #5c2d91
    }
}


assign [app_id="minicom.sh"] 1
exec /home/antone/.config/sway/minicom.sh

assign [app_id="clock.sh"] 2
exec /home/antone/.config/sway/clock.sh

### Input configuration
input * {
    xkb_layout gb
    xkb_options caps:swapescape
}
input type:pointer {
    accel_profile flat
    pointer_accel -0.5
}


bindsym $mod+Return exec $term
bindsym $mod+space exec $menu
bindsym $mod+x kill
floating_modifier $mod normal

bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

bindsym $mod+Ctrl+$left move left
bindsym $mod+Ctrl+$down move down
bindsym $mod+Ctrl+$up move up
bindsym $mod+Ctrl+$right move right

bindsym $mod+i workspace prev
bindsym $mod+o workspace next

mode "resize" {
    # left will shrink the containers width
    # right will grow the containers width
    # up will shrink the containers height
    # down will grow the containers height
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"


default_border none

bindsym Print exec sh -c 'FILE="$HOME/Pictures/screenshot-$(date "+%Y-%m-%d_%H-%M-%S").png" grim -g "$(slurp)" - | tee "$FILE" | wl-copy'
bindsym Shift+Print exec sh -c 'FILE="$HOME/Pictures/screenshot-full-$(date "+%Y-%m-%d_%H-%M-%S").png" grim - | tee "$FILE" | wl-copy'
