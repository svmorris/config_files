 # Internal laptop display
 output eDP-1 \
     mode 1920x1200@60Hz \
     position 0 720 \
     scale 1 \
     transform normal

# Rotated LG display (portrait)
 output HDMI-A-1 \
     mode 1920x1080@60Hz \
     position 1920 0 \
     scale 1 \
     transform 270

# External AOC display
 output DP-1 \
     mode 1920x1080@60Hz \
     position 3000 484 \
     scale 1 \
     transform normal


set $mright DP-1
set $mmid HDMI-A-1
set $mleft eDP-1


workspace 1 output $mright
workspace 2 output $mright
workspace 3 output $mright
workspace 4 output $mright
workspace 5 output $mright
workspace 6 output $mright
workspace 7 output $mright

# External monitor workspaces
workspace 8 output $mmid
workspace 9 output $mmid
workspace 0 output $mmid

# Laptop screen workspaces
workspace q output $mleft
workspace w output $mleft
workspace e output $mleft

## Switch to workspace directly
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 0
bindsym $mod+q workspace number q
bindsym $mod+w workspace number w
bindsym $mod+e workspace number e

# Move windows to different workspaces
bindsym $mod+Shift+1 move to workspace number 1
bindsym $mod+Shift+2 move to workspace number 2
bindsym $mod+Shift+3 move to workspace number 3
bindsym $mod+Shift+4 move to workspace number 4
bindsym $mod+Shift+5 move to workspace number 5
bindsym $mod+Shift+6 move to workspace number 6
bindsym $mod+Shift+7 move to workspace number 7
bindsym $mod+Shift+8 move to workspace number 8
bindsym $mod+Shift+9 move to workspace number 9
bindsym $mod+Shift+0 move to workspace number 0
bindsym $mod+Shift+q move to workspace q
bindsym $mod+Shift+w move to workspace w
bindsym $mod+Shift+e move to workspace e


