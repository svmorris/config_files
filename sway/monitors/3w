### Status Bar
# Read `man 5 sway-bar` for more information about this section.
bar {
    position bottom
    output $mleft
    tray_output $mleft
    gaps 30
    height 30


    status_command /home/seb/.config/config_files/scripts/status_line

    colors {
        statusline            #e6e6eb
        background            #0b0b0f
        separator             #2a2a40

        focused_workspace     #8a2be2        #8a2be2        #0b0b0f
        active_workspace      #12121a        #12121a        #b48cff
        inactive_workspace    #0b0b0f00      #0b0b0f00      #5c2d91
    }
}

bar {
    position top
    output $mmid
    output $mright
    tray_output $mleft
    height 6
    gaps 3
    workspace_min_width 200

    colors {
        statusline            #e6e6eb
        background            #0b0b0f
        separator             #2a2a40

        focused_workspace     #8a2be2        #8a2be2        #8a2be2
        active_workspace      #12121a        #12121a        #12121a
        inactive_workspace    #0b0b0f00      #0b0b0f00      #0b0b0f00
    }
}
